        android:layout_below="@+id/tv_item_origem_rota"
        android:layout_alignStart="@+id/tv_item_origem_rota" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_item_origem_rota"
        android:layout_alignParentEnd="true"
